<h2>Edit place</h2>
<% if (err) { %>
  <p><%= err %></p>
<% } %>

<form action="/places/update" method="post">
  <input type="hidden" name="_id" value="<%= place._id %>" />
  <label>Content:</label>
  <input type="text" name="content" value="<%= place.content %>" /><br /><br />
  <label>Action 1:</label>
  <input type="text" name="actions[0][body]" value="<%= place.actions[0] && place.actions[0].body %>" /><br />
  <label>Link 1:</label>
  <input type="text" name="actions[0][link]" value="<%= place.actions[0] && place.actions[0].link %>" /><br /><br />
  <label>Action 2:</label>
  <input type="text" name="actions[1][body]" value="<%= place.actions[1] && place.actions[1].body %>"/><br />
  <label>Link 2:</label>
  <input type="text" name="actions[1][link]" value="<%= place.actions[1] && place.actions[1].link %>" /><br /><br />

  <input type="Submit" value="Submit" />
</form>
