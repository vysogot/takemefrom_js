<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <div id="container">
      <p id="content">
        <%= place.content %>
      </p>

      <% actions.forEach(function(action, index) { %>
        <p class="choice"><a href="/places/<%= action.target %>"><%= action.content %></a></p>
      <% }); %>

      <% if (actions.length === 0) { %>
        <p class="choice">There is nothing you can do here.
          <a href="javascript:history.back()">Go back</a>.
        </p>
        <p class="choice">Go to the
          <a href="/">home page</a>.
        </p>
      <% } %>

      <% if (isEditable) { %>
        <p id="redesign">
          <a href="/games/<%= place.gameId %>/<%= place._id %>">Redesign this place</a>.
        </p>
      <% } %>
    </div>
  </body>
</html>
