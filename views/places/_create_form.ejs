<h2>Create a place</h2>
<% if (err) { %>
  <p><%= err %></p>
<% } %>

<form action="/places/create" method="post">
  <input type="hidden" name="gameId" value="<%= place.gameId %>" />
  <label>Content:</label>
  <input type="text" name="content" value="<%= place.content %>" /><br /><br />
  <% for (i = 0; i < 4; i++) { %>
    <label class="action">Action <%= i+1 %>:</label>
    <input type="text" name="actions[<%= i %>][body]" placeholder="Leave blank or put action body..."
      value="<%= place.actions[i] && place.actions[i].body %>" />
    <label class="action">Link <%= i+1 %>:</label>
    <input type="text" name="actions[<%= i %>][link]" placeholder="Leave blank or put place id..."
      value="<%= place.actions[i] && place.actions[i].link %>" /><br /><br />
  <% } %>

  <input type="Submit" value="Submit" />
</form>
